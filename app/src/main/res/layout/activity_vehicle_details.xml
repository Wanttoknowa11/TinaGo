<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".VehicleDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Details"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/imageViewVehicle"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp"
            android:background="#E0E0E0"
            android:contentDescription="Vehicle Image"
            android:src="@drawable/img" /> <!-- Placeholder image, replace with actual -->

        <TextView
            android:id="@+id/textViewLicensePlate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="License Plate: ABC-123"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewVIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIN: 1234567890ABCDEF"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewMakeModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make: Toyota, Model: Camry"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: Car"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewRegistrationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration Date: 2023-01-15"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewCurrentStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Registered"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#006400"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/textViewReportDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theft Report Details:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/> <!-- Initially hidden -->

        <TextView
            android:id="@+id/textViewTheftDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theft Date: 2023-03-10"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textViewTheftLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theft Location: Downtown, Main St"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description: Vehicle was parked on the street and was gone in the morning."
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/buttonReportTheft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report Theft"
            android:backgroundTint="@color/design_default_color_error"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            app:cornerRadius="8dp"/>

        <Button
            android:id="@+id/buttonMarkAsRecovered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mark_as_recovered"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            app:cornerRadius="8dp"/>

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Dashboard"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="18sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:cornerRadius="8dp"/>

    </LinearLayout>
</ScrollView>
