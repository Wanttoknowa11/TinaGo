<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".VehicleDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vehicle_details"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textViewDetailLicensePlate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/license_plate_n_a"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_textview_background"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/textViewDetailVIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIN: N/A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_textview_background"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/textViewDetailStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_n_a"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_textview_background"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/textViewDetailMake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/make_n_a"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/textViewDetailOwnerUid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/owner_uid_n_a"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:padding="8dp"/>

        <LinearLayout
            android:id="@+id/layoutReportDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:background="@drawable/rounded_box_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/theft_report_details"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/textViewReportDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/report_date_n_a"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewTheftDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theft_date_n_a"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewTheftLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theft_location_n_a"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewReportDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_n_a"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>


        </LinearLayout>
        <TextView
            android:id="@+id/textViewDetailModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="@string/model_n_a"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="359dp"
            android:layout_height="170dp"
            android:layout_marginTop="24dp"
            android:text=""
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/buttonMarkAsRecovered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mark_as_recovered"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            /> //android:visibility="gone"


    </LinearLayout>
</ScrollView>