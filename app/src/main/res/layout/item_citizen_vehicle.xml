<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/textViewCitizenPlate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License Plate: XYZ-123"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            tools:layout_conversion_absoluteHeight="27dp"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_conversion_absoluteWidth="213dp" />

        <TextView
            android:id="@+id/textViewCitizenMakeModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make: Honda, Model: Civic"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            tools:layout_conversion_absoluteHeight="22dp"
            tools:layout_editor_absoluteY="47dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_conversion_absoluteWidth="187dp" />

        <TextView
            android:id="@+id/textViewCitizenStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Registered"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_editor_absoluteY="73dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_conversion_absoluteWidth="115dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>